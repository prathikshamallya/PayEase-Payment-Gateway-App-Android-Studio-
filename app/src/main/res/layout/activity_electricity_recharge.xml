<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#030450"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElectricityRecharge">

    <ImageButton
        android:id="@+id/backE"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_button"/>
    <TextView
        android:id="@+id/electricityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electricity Bill Recharge"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:gravity="center"/>

    <TextView
        android:id="@+id/boardText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Electricity Board:"
        android:layout_below="@+id/electricityTitle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <Spinner
        android:id="@+id/operatorE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:background="@drawable/spinner_custom" />


    <EditText
        android:id="@+id/amtSendE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/operatorE"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#30ffffff"
        android:hint="Enter Amount to Send"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/baseline_attach_money_24"
        android:drawablePadding="15dp"/>
    <EditText
        android:id="@+id/upi2E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/amtSendE"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#30ffffff"
        android:hint="Enter UPI Pin"
        android:padding="20dp"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="15dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendbtnE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upi2E"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#f1faee"
        android:text="Send"
        android:textColor="#030450"
        android:textSize="25sp" />

</RelativeLayout>